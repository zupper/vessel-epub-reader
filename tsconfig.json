{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2021",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "app": ["app/*"],
      "infra": ["infra/*"]
    },
    "sourceMap": true
  }
}
